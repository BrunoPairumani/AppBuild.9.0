<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/fondob"
    tools:context="apps.proyecto.pairumani.appbuild.LosaActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent"
        android:alpha="0.40">   </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"  >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Losa (H-30)"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="26dp"
                android:textStyle="bold" ></TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Ingresar los metros Ancho, Longitud y Espesor de la capa estándar utilizado es de 15 cm: "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                ></TextView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="130dp"
                android:textColor="@color/white"
                android:text="Tipo de Ladrillo:"
                android:textAlignment="center"
                android:textSize="17dp"
                android:background="@drawable/com_facebook_tooltip_black_background">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Parámetros:"
                    android:textSize="17dp"
                    />
                <Button
                    android:layout_width="50dp"
                    android:onClick="losaDialog"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/informac" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="170dp"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    android:text="Ancho (mts.)"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:textSize="18dp"/>

                <EditText
                    android:layout_width="150dp"
                    android:id="@+id/Mancho"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    android:text="Longitud (mts.)"
                    android:textSize="18dp"
                    android:layout_marginLeft="220dp"
                    android:textAlignment="center" />

                <EditText
                    android:textColor="@color/white"
                    android:layout_width="150dp"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="55dp"
                    android:id="@+id/Mlargo"
                    android:inputType="numberDecimal"

                    android:textAlignment="center" />



                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="120dp"
                    android:textColor="@color/white"
                    android:text="Espesor (cm.)"
                    android:textSize="18dp"
                    android:textAlignment="center" />

                <EditText
                    android:textColor="@color/white"
                    android:layout_width="150dp"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="145dp"
                    android:id="@+id/Mespesor"
                    android:layout_marginLeft="120dp"
                    android:inputType="numberDecimal"

                    android:textAlignment="center" />



                <Button
                    android:id="@+id/btnlosa"
                    android:layout_width="match_parent"
                    android:layout_marginTop="330dp"
                    android:layout_height="wrap_content"
                     android:background="@android:color/holo_orange_light"
                    android:onClick="Operar"
                    android:text="Calcular" />

            </RelativeLayout>


        </RelativeLayout>



    </ScrollView>


</RelativeLayout>
