<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@drawable/fondox"
    tools:context="apps.proyecto.pairumani.appbuild.ResultadoLosaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1000dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"

                    android:layout_alignParentTop="true"
                    android:text="Resultado"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:id="@+id/txttitulo"
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="35dp"
                    android:layout_alignParentTop="true"
                    android:text="Losa H-30"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"></TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CÃ¡lculo para cubrir "
                    android:textColor="@color/black"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="125dp"
                    android:gravity="center"
                    android:id="@+id/tvDatos"
                    android:text="ddd"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </RelativeLayout>

            <ScrollView
                android:layout_marginTop="160dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:id="@+id/scrollView2">
                <HorizontalScrollView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp">

                    <TableLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                           android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:padding="10dp"
                        android:stretchColumns="*">

                        <TableRow

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"

                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:padding="20dp"
                                android:text="Material"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:padding="20dp"
                                android:text="Medida"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:padding="20dp"
                                android:text="Cantidad"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:padding="20dp"
                                android:text="Precio"
                                android:textColor="@color/black" />

                        </TableRow>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/black"
                            android:orientation="horizontal"></LinearLayout>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:padding="10dp"
                                android:text="Cemento"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tvMCemento"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="Medida"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvCCemento"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="Cantidad"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/Pcemento"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="Cantidad"
                                android:textColor="@color/black" />
                        </TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/cardview_dark_background"
                            android:orientation="horizontal"></LinearLayout>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:padding="10dp"
                                android:text="Arena"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvMarena"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="Medida"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvCarena"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="Cantidad"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/Parena"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="Cantidad"
                                android:textColor="@color/black" />
                        </TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/cardview_dark_background"
                            android:orientation="horizontal"></LinearLayout>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:padding="10dp"
                                android:text="Grava"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvMgrava"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="Medida"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvCgrava"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="Cantidad"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/Pgrava"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="Cantidad"
                                android:textColor="@color/black" />

                        </TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/cardview_dark_background"
                            android:orientation="horizontal"></LinearLayout>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:padding="10dp"
                                android:text="Agua"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvCagua"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="Cantidad"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvMagua"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="Medida"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/Pagua"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:text="Cantidad"
                                android:textColor="@color/black" />
                        </TableRow>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/cardview_dark_background"
                            android:orientation="horizontal"></LinearLayout>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:padding="10dp"
                                android:text="Total"
                                android:textColor="@color/black" />

                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"

                                android:textColor="@color/black" />
                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"

                                android:textColor="@color/black" />
                            <TextView
                                android:id="@+id/TxtPtotal"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:text="Total"
                                android:textColor="@color/black" />
                        </TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/cardview_dark_background"
                            android:orientation="horizontal"></LinearLayout>


                    </TableLayout>
                </HorizontalScrollView>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="440dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cemento: Bolsas 42.5 Kg, Arena 25kg, Grava 25  Kg. "
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="16dp"/>

                <Button
                    android:layout_width="350dp"

                    android:layout_height="50dp"

                    android:layout_gravity="center"

                    android:layout_marginTop="50dp"
                    android:background="@android:color/holo_orange_light"
                    android:gravity="center"
                    android:text="Enviar Correo"
                    android:onClick="EnviarCorreo"
                    android:id="@+id/btn_Correo" />

                <Button
                    android:layout_width="350dp"

                    android:layout_height="50dp"

                    android:layout_gravity="center"

                    android:layout_marginTop="-50dp"
                    android:background="@android:color/holo_orange_light"
                    android:gravity="center"
                    android:text="Enviar"

                    android:id="@+id/btn_Enviar"
                    android:visibility="invisible"/>

                <EditText

                    android:id="@+id/et_to"

                    android:layout_width="350dp"
                    android:ems="10"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Ingresar Correo ElectrÃ³nico....."
                    android:inputType="textEmailAddress"
                    android:alpha="0.90"
                    android:visibility="invisible"
                    android:textSize="20dp"

                    android:textColor="@color/com_facebook_blue"
                    android:background="@color/white"
                    android:textAlignment="center"
                    />


                <Button
                    android:layout_width="350dp"

                    android:layout_height="50dp"

                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@android:color/holo_orange_light"
                    android:gravity="center"
                    android:text="Inicio"
                    android:onClick="Home2"
                    android:id="@+id/Home" />



            </LinearLayout>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
